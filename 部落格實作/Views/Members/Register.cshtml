@model 部落格實作.ViewModels.MembersRegisterViewModel

@{
    ViewBag.Title = "註冊";
}
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
<div class="page-header">
    <h1>註冊</h1>
</div>
<div class="form-horizontal">
    @using (Html.BeginForm("Register", "Members", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @*顯示彙總的表單驗證的錯誤訊息*@
        <div class="alert alert-warning">
            @Html.ValidationSummary()
        </div>
        @*產生登入帳號密碼表單內容*@
        <div class="form-group">
            @Html.LabelFor(Model => Model.newMember.Account, new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.TextBoxFor(Model => Model.newMember.Account, new { @class = "form-control" })
                @Html.ValidationMessageFor(Model => Model.newMember.Account, null, new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(Model => Model.Password, new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.PasswordFor(Model => Model.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(Model => Model.Password, null, new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(Model => Model.PasswordCheck, new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.PasswordFor(Model => Model.PasswordCheck, new { @class = "form-control" })
                @Html.ValidationMessageFor(Model => Model.PasswordCheck, null, new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(Model => Model.newMember.Name, new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.TextBoxFor(Model => Model.newMember.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(Model => Model.newMember.Name, null, new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(Model => Model.newMember.Email, new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.TextBoxFor(Model => Model.newMember.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(Model => Model.newMember.Email, null, new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(Model => Model.MembersImage, new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.TextBoxFor(Model => Model.MembersImage, new { @class = "form-control", type = "file" })
                @Html.ValidationMessageFor(Model => Model.MembersImage, null, new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input class="btn btn-primary" type="submit" value="註冊" />
            </div>
        </div>
    }
</div>